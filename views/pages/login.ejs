<%- contentFor('body') %>

    <!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
    <div class="container" align="center">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                <div class="recovery-panel panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Faça login na sua conta</h3>
                    </div>
                    <div class="card card-container">
                        <!--<img class="profile-img" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" />-->
                        <!--<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />-->
                        <!-- <p id="profile-name" class="profile-name-card"></p>-->
                        <form class="form-signin">
                            <span id="reauth-email" class="reauth-email"></span>
                            <input type="email" id="inputEmail" class="form-control" placeholder="Endereço de Email" required autofocus>
                            <input type="password" id="inputPassword" class="form-control" placeholder="Senha" required>
                            <div id="remember" class="checkbox">
                                <label>
                                    <input type="checkbox" value="remember-me"> Lembre-me
                                </label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Entrar</button>
                        </form>
                        <!-- /form -->
                        <a href="recupera-senha.html" class="forgot-password">Esqueceu a senha?</a>
                    </div>
                    <!-- /card-container -->
                </div>
            </div>
        </div>

</body>

